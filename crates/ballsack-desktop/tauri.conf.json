{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "ballsack",
  "version": "0.1.0",
  "identifier": "com.ballsack.desktop",
  "build": {
    "beforeDevCommand": "npm run dev --prefix ballsack-desktop/ui",
    "beforeBuildCommand": "npm run build --prefix ballsack-desktop/ui",
    "devUrl": "http://localhost:5173",
    "frontendDist": "ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ballsack",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}
